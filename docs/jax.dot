digraph {
  graph [style="dotted,rounded"]
  node [color="#bdc1c6", fillcolor="#f8f9fa", shape="box", style="rounded,filled", width="1.6"]
  edge [color="#5f6368"]
  newrank=true

  subgraph cluster_language {
    graph [label="Language"]
    node [color="#7baaf7", fillcolor="#e8f0fe"]
    backend [label="Backend"]
    compiler [label="Compiler"]
    executor [label="Executor"]
    computation [label="Computation"]
  }

  backend -> compiler
  backend -> executor
  compiler -> computation
  executor -> computation

  // Layout
  {rank=same; backend}
  {rank=same; compiler, executor}
  {rank=same; computation}
}

